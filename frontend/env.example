# Frontend Environment Variables
# Copy this file to .env and update values as needed
# Note: Only variables prefixed with REACT_APP_ are available in the browser

# Environment mode
REACT_APP_ENV=local

# API Configuration
# For production: Use API Gateway URL
# For local development: Use direct service URLs
REACT_APP_API_GATEWAY_URL=
REACT_APP_PRODUCT_SERVICE_URL=http://localhost:8001/api
REACT_APP_CART_SERVICE_URL=http://localhost:8002/api

# Development Configuration
PORT=3000
GENERATE_SOURCEMAP=true
REACT_APP_DEBUG=true

# Build Configuration
BUILD_PATH=build
PUBLIC_URL=/

# AWS Cognito Configuration (for production/cloud environments)
REACT_APP_AWS_REGION=us-west-2
REACT_APP_USER_POOL_ID=
REACT_APP_USER_POOL_WEB_CLIENT_ID=
REACT_APP_IDENTITY_POOL_ID=
REACT_APP_USER_POOL_DOMAIN=

# Authentication Configuration
REACT_APP_USE_COGNITO_AUTH=false