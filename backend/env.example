# Backend Environment Variables
# Copy this file to .env and update values as needed

# Environment mode (local, dev, staging, prod)
ENV=local

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=dummy
AWS_SECRET_ACCESS_KEY=dummy

# DynamoDB Configuration
DYNAMODB_ENDPOINT=http://localhost:8000
PRODUCTS_TABLE_NAME=ecom-products
CARTS_TABLE_NAME=ecom-carts

# Service Configuration
PORT=8001
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-min-32-chars

# Inter-service Communication
PRODUCT_SERVICE_URL=http://localhost:8001/api

# Cognito Configuration (for production/cloud environments)
COGNITO_USER_POOL_ID=
COGNITO_USER_POOL_REGION=us-west-2
COGNITO_WEB_CLIENT_ID=
COGNITO_API_CLIENT_ID=
COGNITO_API_CLIENT_SECRET=
USE_COGNITO_AUTH=false

# Logging
LOG_LEVEL=INFO
DEBUG=true

# Additional Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost
ALLOWED_HOSTS=localhost,127.0.0.1
