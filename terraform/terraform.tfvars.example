# Copy this file to terraform.tfvars and update the values

# Project Configuration
project_name = "ecom-spa"
environment  = "dev"

# AWS Configuration
aws_region = "ap-south-1"

# DynamoDB Configuration
dynamodb_billing_mode         = "PAY_PER_REQUEST"
enable_point_in_time_recovery = true
dynamodb_deletion_protection  = false

# Application Configuration
jwt_secret_key = "your-super-secret-jwt-key-change-in-production"

# Lambda Configuration
lambda_memory_size = 512
lambda_timeout     = 30
lambda_architecture = "x86_64"
enable_provisioned_concurrency = false

# Cognito Configuration (REQUIRED for user authentication)
cognito_domain_prefix = "your-unique-domain-prefix"  # Must be globally unique
frontend_domain       = "https://your-api-gateway-url/dev"
api_domain           = "https://your-api-gateway-url/dev"
enable_cognito_domain = true

# Cognito Password Policy (optional)
cognito_password_policy = {
  minimum_length    = 8
  require_lowercase = true
  require_numbers   = true
  require_symbols   = false
  require_uppercase = true
}

# Cognito MFA Configuration (optional)
cognito_mfa_configuration = "OPTIONAL"  # OFF, ON, or OPTIONAL

# API Gateway Configuration
api_gateway_stage_name = "dev"
api_gateway_cors_origins = ["*"]

# Domain Configuration (optional)
# domain_name                    = "your-domain.com"
# certificate_arn               = "arn:aws:acm:ap-south-1:123456789012:certificate/12345678-1234-1234-1234-123456789012"
# api_gateway_domain_name       = "api.your-domain.com"
# api_gateway_certificate_arn   = "arn:aws:acm:ap-south-1:123456789012:certificate/12345678-1234-1234-1234-123456789012"